{
  "name": "@machinomy/contracts",
  "version": "3.1.0",
  "description": "Machinomy contracts managed by Truffle",
  "license": "Apache-2.0",
  "homepage": "https://github.com/machinomy/machinomy-contracts#readme",
  "bugs": {
    "url": "https://github.com/machinomy/machinomy-contracts/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machinomy/machinomy-contracts.git"
  },
  "config": {
    "wrapped_artifacts": "build/contracts/@(Broker|TokenBroker|ABroker|BBroker|ERC20|ECRecovery).json",
    "wrappers_dir": "build/wrappers",
    "truffle_tests": "test/*.test.js"
  },
  "scripts": {
    "prepublish": "yarn travis",
    "travis": "yarn lint && yarn test",
    "lint": "yarn lint:solidity && yarn lint:typescript",
    "lint:solidity": "solium -d contracts/",
    "lint:typescript": "tslint --format stylish --project .",
    "build": "yarn support:wrap && tsc --project tsconfig.json",
    "support:wrap": "yarn support:build && node support/wrap $npm_package_config_wrapped_artifacts --output $npm_package_config_wrappers_dir",
    "support:build": "tsc --project support/tsconfig.json",
    "truffle:test": "run-with-testrpc 'truffle test $npm_package_config_truffle_tests'",
    "truffle:compile": "truffle compile",
    "test": "yarn build && yarn truffle:test"
  },
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "build/",
    "src/"
  ],
  "engines": {
    "node": ">=9.0.0"
  },
  "devDependencies": {
    "@machinomy/types-truffle-contract": "https://github.com/machinomy/types-truffle-contract",
    "@types/bignumber.js": "^4.0.3",
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7.1.0",
    "@types/glob": "^5.0.34",
    "@types/handlebars": "^4.0.36",
    "@types/mocha": "^2.2.45",
    "@types/node": "^8.0.28",
    "@types/yargs": "^10.0.0",
    "bn.js": "^4.11.8",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "glob": "^7.1.2",
    "handlebars": "^4.0.11",
    "mocha": "^4.0.1",
    "mocha-typescript": "^1.1.12",
    "run-with-testrpc": "^0.2.1",
    "solium": "^1.0.11",
    "truffle": "^4.0.4",
    "ts-node": "^4.0.2",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "types-bn": "^0.0.1",
    "types-ethereumjs-util": "https://github.com/machinomy/types-ethereumjs-util.git",
    "typescript": "^2.5.3",
    "typescript-memoize": "^1.0.0-alpha.3"
  },
  "dependencies": {
    "bignumber.js": "^4.1.0",
    "buffer": "^5.0.7",
    "ethereumjs-abi": "https://github.com/ethereumjs/ethereumjs-abi",
    "ethereumjs-util": "^5.1.2",
    "truffle-contract": "^3.0.0",
    "web3": "^0.20.1",
    "zeppelin-solidity": "^1.5.0"
  }
}
